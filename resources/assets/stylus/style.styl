#tweets
	margin 10px 
	background-color #a0d8ef
	
	ul
		list-style none
		position relative
		
		li
			background-color rgba(255, 255, 255, 0.8)
			border-radius 50%
			width 300px
			font-size 10px
			padding 50px 
			position absolute
			
			div.tweet
				div.image 
					width 300px
					height 200px
					overflow hidden
					position relative

					img
						position absolute
						width auto
						height auto
						max-width 100%
						max-height 100%
						left 50%
						top 50%
						-webkit-transform translate3d(-50%, -50%, 0)
						      transform translate3d(-50%, -50%, 0)